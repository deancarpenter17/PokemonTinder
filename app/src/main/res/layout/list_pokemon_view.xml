<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pokemon_card_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="110dp"
    android:layout_marginEnd="35dp"
    android:layout_marginStart="35dp"
    android:layout_marginTop="90dp"
    android:background="@drawable/background_with_shadow">

    <TextView
        android:id="@+id/list_pokemon_view_pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/list_pokemon_view_pokemon_types"
        android:layout_marginBottom="10dp"
        android:textAllCaps="true"
        android:textColor="@color/pokemon_blue"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/list_pokemon_view_pokemon_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/pokemon_blue"
        android:layout_above="@+id/list_pokemon_view_horizontal_layout"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/list_pokemon_view_move_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/list_pokemon_view_horizontal_layout"
        android:textColor="@color/pokemon_blue" />

    <TextView
        android:id="@+id/list_pokemon_view_move_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/list_pokemon_view_move_one"
        android:textColor="@color/pokemon_blue"
        />

    <LinearLayout
        android:id="@+id/list_pokemon_view_horizontal_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/list_pokemon_view_pokemon_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:textColor="@color/pokemon_blue"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/list_pokemon_view_pokemon_picture"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/list_pokemon_view_pokemon_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/pokemon_blue"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/list_pokemon_view_users_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/dark_red"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        />

</RelativeLayout>

