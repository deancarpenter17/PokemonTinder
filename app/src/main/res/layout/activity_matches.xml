<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_activity_matches"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_matches"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/slowbro"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.carpenter.dean.pokemontinder.MatchesActivity">

        <TextView
            android:id="@+id/matches_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/matches_title"
            android:textSize="25sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/matches_recycler_view"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_below="@id/matches_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scrollbars="vertical">


        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <ListView
        android:id="@+id/navList_matches_activity"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />
</android.support.v4.widget.DrawerLayout>
